{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "roleDefinitionName": {
            "type": "string",
            "defaultValue": "[guid(subscription().subscriptionId)]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/roleDefinitions",
            "apiVersion": "2018-01-01-preview",
            "name": "[parameters('roleDefinitionName')]",
            "properties": {
                "assignableScopes": [
                    "[concat('/subscriptions/', subscription().subscriptionId)]"
                ],
                "description": "Custom role Definition to allow users to query data stored in a Monitoring Account",
                "permissions": [
                    {
                        "actions": [
                            "microsoft.monitor/accounts/*/read"
                        ],
                        "dataActions": [
                            "microsoft.monitor/*/read",
                            "microsoft.monitor/*/write"
                        ]
                    }
                ],
                "roleName": "[concat('Monitoring Data Reader-', subscription().subscriptionId)]",
                "type": "CustomRole"
            }
        }
    ]
}
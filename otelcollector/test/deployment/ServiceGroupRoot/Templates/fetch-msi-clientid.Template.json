{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "msiName": {
      "type": "string",
      "defaultValue": "prom-test-msi"
    },
    "msiResourceGroup": {
      "type": "string",
      "defaultValue": "prom-test"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "fetchMsiProperties",
      "resourceGroup": "[parameters('msiResourceGroup')]",
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "parameters": {
          "msiName": {
            "value": "[parameters('msiName')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "msiName": {
              "type": "string"
            }
          },
          "resources": [],
          "outputs": {
            "clientId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('msiName')), '2023-01-31').clientId]"
            },
            "principalId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('msiName')), '2023-01-31').principalId]"
            }
          }
        }
      }
    }
  ],
  "outputs": {
    "clientId": {
      "type": "string",
      "value": "[reference('fetchMsiProperties').outputs.clientId.value]"
    },
    "principalId": {
      "type": "string",
      "value": "[reference('fetchMsiProperties').outputs.principalId.value]"
    }
  }
}
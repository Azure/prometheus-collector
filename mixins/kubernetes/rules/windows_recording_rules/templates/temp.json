{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "name": "kaveeshTestRules522022",
            "type": "Microsoft.AlertsManagement/prometheusRuleGroups",
            "apiVersion": "2021-07-22-preview",
            "location": "eastus2euap",
            "properties": {
                "scopes": [
                    "/subscriptions/ad2f1a83-caac-4e21-9d2a-9ca3f87105e2/resourcegroups/divyaj-test/providers/microsoft.monitor/accounts/onboardingTestMACAcc"
                ],
                "rules": [
                    {
                        "record": "node:windows_node_cpu_utilisation:avg3m",
                        "expression": "1 - avg by (instance, job, cluster) (rate(windows_cpu_time_total{ job=\"windows-exporter\", cluster=\"vishwa-s\",mode=\"idle\"}[3m]))"
                    },
                    {
                        "record": "node:windows_node_num_cpu:sum",
                        "expression": "count by (instance, cluster, job) (sum by (instance, core, cluster, job) (windows_cpu_time_total{ job=\"windows-exporter\", cluster=\"vishwa-s\"}))"
                    },
                    {
                        "record": "node:windows_node_memory_bytes_total:sum",
                        "expression": "sum by (instance, cluster, job) (windows_os_visible_memory_bytes{ job=\"windows-exporter\", cluster=\"vishwa-s\"})"
                    },
                    {
                        "record": "node:windows_node_memory_bytes_available:sum",
                        "expression": "sum by (instance, cluster, job) ((windows_memory_available_bytes{ job=\"windows-exporter\", cluster=\"vishwa-s\"}))"
                    },
                    {
                        "record": "node:windows_node_memory_utilisation:ratio",
                        "expression": "(node:windows_node_memory_bytes_total:sum - node:windows_node_memory_bytes_available:sum) / scalar(sum by (job, cluster) (node:windows_node_memory_bytes_total:sum))"
                    }
                ]
            }
        }
    ]
}